{
    "name": "@anolilab/node-mono-library-template",
    "version": "0.0.0",
    "private": true,
    "description": "Provides a GitHub mono repository template for a Anolilab Node libraries, using GitHub actions.",
    "repository": "anolilab/node-mono-library-template",
    "license": "MIT",
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de",
        "url": "https://github.com/prisis"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "preconstruct build",
        "build:dev": "preconstruct dev",
        "create:package": "plop",
        "fix:build": "preconstruct fix",
        "fix:lint": "yarn run lint --fix",
        "fix:lint:text": "textlint ./.github/ISSUE_TEMPLATE/** ./packages/** ./README.md ./UPGRADE.md --parallel --experimental --fix",
        "preinstall": "node verify-node-version.cjs",
        "postinstall": "preconstruct dev",
        "lint": "cross-env NO_LOGS=true eslint -c ./.eslintrc.cjs --ext .js,.ts,.tsx ./packages --cache --cache-strategy content .",
        "lint:fix": "yarn run lint --fix",
        "lint:text": "textlint ./.github/ISSUE_TEMPLATE/** ./packages/** ./README.md ./UPGRADE.md --parallel --experimental --dry-run",
        "prepare": "is-ci || husky install",
        "prettier": "prettier --config=.prettierrc.cjs --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
        "snapupdate": "jest --updateSnapshot",
        "sort-package-json": "sort-package-json packages/**/package.json",
        "test": "NODE_ENV=test jest --watch",
        "test:config": "NODE_ENV=test jest --showConfig",
        "test:coverage": "NODE_ENV=test jest --coverage",
        "test:coverage:group:no-integration": "NODE_ENV=test jest --group=-integration --coverage",
        "test:generate-output": "jest --json --outputFile=.jest-test-results.json || true",
        "test:group:api": "NODE_ENV=test jest --group=api --watchAll",
        "test:group:integration": "NODE_ENV=test jest --group=integration --watchAll",
        "test:group:unit": "NODE_ENV=test jest --group=unit --watchAll",
        "test:once": "NODE_ENV=test jest --runInBand --detectOpenHandles",
        "test:once:group:no-integration": "NODE_ENV=test jest --group=-integration"
    },
    "browserslist": [
        "extends browserslist-config-anolilab"
    ],
    "dependencies": {
        "@anolilab/babel-preset": "^4.0.0",
        "@anolilab/eslint-config": "^2.2.0",
        "@anolilab/prettier-config": "^2.0.6",
        "@anolilab/semantic-release-preset": "^1.2.1",
        "@anolilab/textlint-config": "^6.0.0",
        "@babel/cli": "^7.16.8",
        "@babel/core": "^7.16.12",
        "@babel/eslint-parser": "^7.17.0",
        "@babel/plugin-syntax-jsx": "^7.16.7",
        "@babel/preset-react": "^7.16.7",
        "@babel/preset-typescript": "^7.16.7",
        "@babel/runtime": "^7.16.7",
        "@commitlint/cli": "^16.1.0",
        "@commitlint/config-conventional": "^16.0.0",
        "@manypkg/cli": "^0.19.1",
        "@preconstruct/cli": "^2.1.5",
        "@qiwi/multi-semantic-release": "^3.17.1",
        "@testing-library/jest-dom": "^5.16.2",
        "@types/jest": "^27.4.0",
        "@types/jest-axe": "^3.5.3",
        "@types/node": "^14.18.10",
        "@typescript-eslint/eslint-plugin": "^5.10.2",
        "@typescript-eslint/parser": "^5.10.2",
        "babel-loader": "^8.2.3",
        "browserslist-config-anolilab": "^2.3.0",
        "commitizen": "^4.2.4",
        "cross-env": "^7.0.3",
        "diffable-html": "^5.0.0",
        "eslint": "^7.32.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jest": "^26.0.0",
        "eslint-plugin-node": "^11.1.0",
        "husky": "^7.0.4",
        "is-ci": "^3.0.1",
        "jest": "^27.4.7",
        "jest-axe": "^5.0.1",
        "jest-circus": "^27.4.6",
        "jest-diff": "^27.4.6",
        "jest-extended": "^2.0.0",
        "jest-junit": "^13.0.0",
        "jest-mock": "^27.4.6",
        "jest-watch-typeahead": "^1.0.0",
        "lint-staged": "^12.3.2",
        "plop": "^3.0.5",
        "prettier": "^2.5.1",
        "semantic-release": "^19.0.2",
        "snapshot-diff": "^0.9.0",
        "sort-package-json": "^1.53.1",
        "textlint": "^12.1.0",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.5"
    },
    "modulePathIgnorePatterns": [
        "./package.json"
    ],
    "packageManager": "yarn@3.2.0",
    "preconstruct": {
        "packages": [
            "packages/*",
            "packages/@*/*"
        ],
        "globals": {}
    }
}
